  <script>
    // ================================================
    // THE SINGULARITY - A Cinematic Black Hole
    // ================================================
    
    const canvas = document.getElementById('singularity');
    const ctx = canvas.getContext('2d');
    
    let W, H;
    let mx = 0, my = 0;
    let cx = 0, cy = 0;
    let speed = 0;
    let time = 0;
    let isHovering = false;
    
    // Particle systems
    const letters = [];        // Torn letters spiraling in
    const accretionParticles = []; // Glowing matter in the disk
    const distortionRings = []; // Gravitational lensing rings
    
    const MAX_LETTERS = 100;
    const MAX_ACCRETION = 150;
    
    // Resize
    function resize() {
      W = canvas.width = window.innerWidth;
      H = canvas.height = window.innerHeight;
    }
    resize();
    window.addEventListener('resize', resize);
    
    // Mouse tracking
    let lastMx = 0, lastMy = 0;
    document.addEventListener('mousemove', e => {
      speed = Math.hypot(e.clientX - mx, e.clientY - my);
      lastMx = mx;
      lastMy = my;
      mx = e.clientX;
      my = e.clientY;
    });
    
    // Hover detection
    document.querySelectorAll('a, button, .project').forEach(el => {
      el.addEventListener('mouseenter', () => isHovering = true);
      el.addEventListener('mouseleave', () => isHovering = false);
    });
    
    // Text elements to tear letters from
    function getTextElements() {
      return document.querySelectorAll('h1 .line, h2, h3, .project-title, .subtitle, .logo, .section-title, .contact-title');
    }
    
    // ================================================
    // LETTER TEARING - Rip characters from text
    // ================================================
    function tearLetters() {
      if (letters.length >= MAX_LETTERS) return;
      
      getTextElements().forEach(el => {
        const rect = el.getBoundingClientRect();
        const text = el.textContent;
        if (!text || text.length < 2) return;
        
        const closestX = Math.max(rect.left, Math.min(mx, rect.right));
        const closestY = Math.max(rect.top, Math.min(my, rect.bottom));
        const dist = Math.hypot(mx - closestX, my - closestY);
        
        // Tear probability based on distance and speed
        const tearRadius = 180;
        const probability = Math.pow(1 - dist / tearRadius, 2) * 0.4 * (1 + speed * 0.05);
        
        if (dist < tearRadius && Math.random() < probability) {
          const char = text[Math.floor(Math.random() * text.length)];
          if (!char.trim()) return;
          
          const style = getComputedStyle(el);
          const angle = Math.atan2(cy - closestY, cx - closestX);
          
          letters.push({
            char,
            x: closestX + (Math.random() - 0.5) * 30,
            y: closestY + (Math.random() - 0.5) * 30,
            size: Math.min(parseFloat(style.fontSize) * (0.3 + Math.random() * 0.3), 48),
            weight: style.fontWeight,
            life: 1,
            maxLife: 1,
            angle: angle + (Math.random() - 0.5) * 0.5,
            orbitAngle: Math.random() * Math.PI * 2,
            orbitSpeed: 0.02 + Math.random() * 0.04,
            orbitRadius: 60 + Math.random() * 80,
            velocity: 0.5 + Math.random() * 1.5,
            stretch: 1,
            red: Math.random() > 0.7, // Some letters glow red (Hawking radiation)
          });
        }
      });
    }
    
    // ================================================
    // ACCRETION DISK - Swirling matter
    // ================================================
    function spawnAccretion() {
      if (accretionParticles.length >= MAX_ACCRETION || Math.random() > 0.3) return;
      
      const angle = Math.random() * Math.PI * 2;
      const radius = 25 + Math.random() * 60;
      
      accretionParticles.push({
        angle,
        radius,
        baseRadius: radius,
        speed: 0.015 + Math.random() * 0.025,
        size: 1 + Math.random() * 2,
        life: 1,
        decay: 0.003 + Math.random() * 0.004,
        brightness: 0.3 + Math.random() * 0.7,
        trail: [],
      });
    }
    
    // ================================================
    // MAIN RENDER LOOP
    // ================================================
    function render() {
      time += 0.016;
      
      // Smooth cursor following
      cx += (mx - cx) * 0.12;
      cy += (my - cy) * 0.12;
      
      ctx.clearRect(0, 0, W, H);
      
      const intensity = Math.min(speed / 15, 1);
      const hoverScale = isHovering ? 1.3 : 1;
      
      // ============================================
      // 1. GRAVITATIONAL FIELD (Outer glow)
      // ============================================
      const fieldRadius = (200 + intensity * 80) * hoverScale;
      const fieldGrad = ctx.createRadialGradient(cx, cy, 0, cx, cy, fieldRadius);
      fieldGrad.addColorStop(0, `rgba(232, 228, 220, ${0.06 + intensity * 0.06})`);
      fieldGrad.addColorStop(0.2, `rgba(232, 228, 220, ${0.03 + intensity * 0.03})`);
      fieldGrad.addColorStop(0.5, `rgba(200, 180, 160, ${0.01 + intensity * 0.02})`);
      fieldGrad.addColorStop(1, 'transparent');
      ctx.fillStyle = fieldGrad;
      ctx.beginPath();
      ctx.arc(cx, cy, fieldRadius, 0, Math.PI * 2);
      ctx.fill();
      
      // ============================================
      // 2. GRAVITATIONAL LENSING RINGS
      // ============================================
      const numRings = 4 + Math.floor(intensity * 3);
      for (let i = 0; i < numRings; i++) {
        const ringRadius = (30 + i * 18) * hoverScale;
        const wobble = Math.sin(time * 2 + i) * 2;
        const alpha = (0.04 + intensity * 0.04) * (1 - i / numRings);
        
        ctx.strokeStyle = `rgba(232, 228, 220, ${alpha})`;
        ctx.lineWidth = 1;
        ctx.beginPath();
        ctx.arc(cx, cy, ringRadius + wobble, 0, Math.PI * 2);
        ctx.stroke();
      }
      
      // ============================================
      // 3. ACCRETION DISK
      // ============================================
      spawnAccretion();
      
      for (let i = accretionParticles.length - 1; i >= 0; i--) {
        const p = accretionParticles[i];
        
        // Spiral inward
        p.angle += p.speed;
        p.radius *= 0.997;
        p.life -= p.decay;
        
        const x = cx + Math.cos(p.angle) * p.radius * hoverScale;
        const y = cy + Math.sin(p.angle) * p.radius * hoverScale * 0.3; // Flatten for disk perspective
        
        // Store trail
        p.trail.push({ x, y, life: p.life });
        if (p.trail.length > 8) p.trail.shift();
        
        // Draw trail
        for (let t = 0; t < p.trail.length; t++) {
          const tp = p.trail[t];
          const trailAlpha = (t / p.trail.length) * p.life * 0.5 * p.brightness;
          ctx.fillStyle = `rgba(255, ${200 + Math.random() * 55}, ${150 + Math.random() * 50}, ${trailAlpha})`;
          ctx.beginPath();
          ctx.arc(tp.x, tp.y, p.size * (t / p.trail.length), 0, Math.PI * 2);
          ctx.fill();
        }
        
        // Draw particle
        const alpha = p.life * p.brightness;
        const glow = ctx.createRadialGradient(x, y, 0, x, y, p.size * 3);
        glow.addColorStop(0, `rgba(255, 230, 200, ${alpha})`);
        glow.addColorStop(0.5, `rgba(255, 180, 100, ${alpha * 0.5})`);
        glow.addColorStop(1, 'transparent');
        ctx.fillStyle = glow;
        ctx.beginPath();
        ctx.arc(x, y, p.size * 3, 0, Math.PI * 2);
        ctx.fill();
        
        if (p.life <= 0 || p.radius < 8) {
          accretionParticles.splice(i, 1);
        }
      }
      
      // ============================================
      // 4. EVENT HORIZON (The black center)
      // ============================================
      const horizonRadius = (12 + intensity * 4) * hoverScale;
      
      // Dark void
      const voidGrad = ctx.createRadialGradient(cx, cy, 0, cx, cy, horizonRadius * 2);
      voidGrad.addColorStop(0, 'rgba(0, 0, 0, 0.95)');
      voidGrad.addColorStop(0.5, 'rgba(0, 0, 0, 0.7)');
      voidGrad.addColorStop(1, 'transparent');
      ctx.fillStyle = voidGrad;
      ctx.beginPath();
      ctx.arc(cx, cy, horizonRadius * 2, 0, Math.PI * 2);
      ctx.fill();
      
      // Bright ring at event horizon (photon sphere)
      ctx.strokeStyle = `rgba(255, 250, 240, ${0.4 + intensity * 0.3})`;
      ctx.lineWidth = 1.5;
      ctx.beginPath();
      ctx.arc(cx, cy, horizonRadius, 0, Math.PI * 2);
      ctx.stroke();
      
      // Inner glow
      const innerGlow = ctx.createRadialGradient(cx, cy, horizonRadius * 0.5, cx, cy, horizonRadius);
      innerGlow.addColorStop(0, 'rgba(255, 255, 255, 0.1)');
      innerGlow.addColorStop(1, 'rgba(255, 220, 180, 0.3)');
      ctx.fillStyle = innerGlow;
      ctx.beginPath();
      ctx.arc(cx, cy, horizonRadius, 0, Math.PI * 2);
      ctx.fill();
      
      // Core singularity
      ctx.fillStyle = '#fff';
      ctx.shadowColor = '#fff';
      ctx.shadowBlur = 20 + intensity * 15;
      ctx.beginPath();
      ctx.arc(cx, cy, 3 * hoverScale, 0, Math.PI * 2);
      ctx.fill();
      ctx.shadowBlur = 0;
      
      // ============================================
      // 5. TORN LETTERS SPIRALING IN
      // ============================================
      tearLetters();
      
      for (let i = letters.length - 1; i >= 0; i--) {
        const L = letters[i];
        
        const dx = cx - L.x;
        const dy = cy - L.y;
        const dist = Math.hypot(dx, dy);
        
        // Gravitational acceleration (stronger close to singularity)
        const gravity = 1200 / (dist * dist + 50);
        
        // Orbital motion
        L.orbitAngle += L.orbitSpeed * (1 + (1 - L.life) * 2);
        L.orbitRadius *= 0.985;
        
        const orbitOffsetX = Math.cos(L.orbitAngle) * L.orbitRadius * L.life;
        const orbitOffsetY = Math.sin(L.orbitAngle) * L.orbitRadius * L.life * 0.5;
        
        // Move toward singularity with orbital spiral
        L.x += (dx / dist) * gravity + orbitOffsetX * 0.03;
        L.y += (dy / dist) * gravity + orbitOffsetY * 0.03;
        
        // Time dilation stretch (letters stretch as they approach)
        L.stretch = 1 + (1 - L.life) * 2;
        
        // Decay
        L.life -= 0.006;
        
        // Draw
        if (L.life > 0 && dist > 10) {
          const alpha = L.life * 0.9;
          const scale = L.life;
          const rotation = (1 - L.life) * 720;
          
          ctx.save();
          ctx.translate(L.x, L.y);
          ctx.rotate(rotation * Math.PI / 180);
          ctx.scale(1, L.stretch);
          
          // Chromatic aberration for letters being torn
          if (L.life < 0.7) {
            ctx.fillStyle = `rgba(255, 100, 100, ${alpha * 0.3})`;
            ctx.font = `${L.weight} ${L.size * scale}px Inter`;
            ctx.textAlign = 'center';
            ctx.textBaseline = 'middle';
            ctx.fillText(L.char, -2, 0);
            
            ctx.fillStyle = `rgba(100, 100, 255, ${alpha * 0.3})`;
            ctx.fillText(L.char, 2, 0);
          }
          
          // Main letter
          const color = L.red ? `rgba(255, ${150 + L.life * 100}, ${100 + L.life * 100}, ${alpha})` 
                              : `rgba(232, 228, 220, ${alpha})`;
          ctx.fillStyle = color;
          ctx.font = `${L.weight} ${L.size * scale}px Inter`;
          ctx.textAlign = 'center';
          ctx.textBaseline = 'middle';
          ctx.fillText(L.char, 0, 0);
          
          ctx.restore();
        } else {
          letters.splice(i, 1);
        }
      }
      
      // ============================================
      // 6. ENERGY JETS (when moving fast)
      // ============================================
      if (speed > 10) {
        const jetLength = speed * 3;
        const angle = Math.atan2(my - lastMy, mx - lastMx);
        
        // Jet gradient
        const jetGrad = ctx.createLinearGradient(
          cx, cy,
          cx - Math.cos(angle) * jetLength,
          cy - Math.sin(angle) * jetLength
        );
        jetGrad.addColorStop(0, `rgba(255, 255, 255, ${0.3 * (speed / 50)})`);
        jetGrad.addColorStop(0.3, `rgba(200, 220, 255, ${0.15 * (speed / 50)})`);
        jetGrad.addColorStop(1, 'transparent');
        
        ctx.strokeStyle = jetGrad;
        ctx.lineWidth = 2;
        ctx.beginPath();
        ctx.moveTo(cx, cy);
        ctx.lineTo(
          cx - Math.cos(angle) * jetLength,
          cy - Math.sin(angle) * jetLength
        );
        ctx.stroke();
      }
      
      requestAnimationFrame(render);
    }
    
    // Click burst
    document.addEventListener('click', () => {
      getTextElements().forEach(el => {
        const rect = el.getBoundingClientRect();
        const text = el.textContent;
        if (!text) return;
        
        const dist = Math.hypot(mx - (rect.left + rect.width/2), my - (rect.top + rect.height/2));
        if (dist > 300) return;
        
        const style = getComputedStyle(el);
        for (let i = 0; i < 8 && letters.length < MAX_LETTERS; i++) {
          const char = text[Math.floor(Math.random() * text.length)];
          if (!char.trim()) continue;
          
          letters.push({
            char,
            x: rect.left + Math.random() * rect.width,
            y: rect.top + Math.random() * rect.height,
            size: Math.min(parseFloat(style.fontSize) * 0.35, 40),
            weight: style.fontWeight,
            life: 1,
            maxLife: 1,
            angle: Math.atan2(cy - rect.top, cx - rect.left),
            orbitAngle: Math.random() * Math.PI * 2,
            orbitSpeed: 0.03 + Math.random() * 0.05,
            orbitRadius: 80 + Math.random() * 100,
            velocity: 1 + Math.random() * 2,
            stretch: 1,
            red: Math.random() > 0.5,
          });
        }
      });
      
      // Burst of accretion particles
      for (let i = 0; i < 20; i++) {
        const angle = Math.random() * Math.PI * 2;
        accretionParticles.push({
          angle,
          radius: 30 + Math.random() * 80,
          baseRadius: 30 + Math.random() * 80,
          speed: 0.02 + Math.random() * 0.04,
          size: 1.5 + Math.random() * 2.5,
          life: 1,
          decay: 0.008 + Math.random() * 0.008,
          brightness: 0.5 + Math.random() * 0.5,
          trail: [],
        });
      }
    });
    
    // Start
    render();
    
    // Disable on touch
    if ('ontouchstart' in window) {
      canvas.style.display = 'none';
    }
  </script>
</body>
</html>
