  <!-- Waveform Animation Script -->
  <script>
    // Create waveform bars
    const waveform = document.getElementById('waveform');
    for (let i = 0; i < 24; i++) {
      const bar = document.createElement('div');
      bar.className = 'wave-bar';
      bar.style.height = '24px';
      bar.style.backgroundColor = 'rgba(245,242,237,0.15)';
      waveform.appendChild(bar);
    }
    
    // Animate waveform - matches React version exactly
    const bars = document.querySelectorAll('.wave-bar');
    function animateWaveform() {
      const time = Date.now() * 0.002;
      bars.forEach((bar, i) => {
        const value = 0.3 + Math.sin(time + i * 0.3) * 0.25 + Math.sin(time * 1.3 + i * 0.5) * 0.15;
        const height = value * 48;
        bar.style.height = height + 'px';
        bar.style.backgroundColor = value > 0.6 ? '#ff3d2e' : 'rgba(245,242,237,0.15)';
      });
      requestAnimationFrame(animateWaveform);
    }
    animateWaveform();
  </script>
